@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4 text-center">Welcome</h1>
    <p class="text-justify">The first site that specializes in job search for trainee/intern/juniuor developers and specialists.</p>
    <p class="text-justify">Getting your first job can be very difficult. We will help you do this and get the necessary experience for the dream job and development that you crave so much.</p>
    <p class="text-justify">Time to add your CV or search for a suitable vacancy.</p>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">CVs</h5>
                    <p class="card-text">Let`s show your CV for recruters</p>
                    <a class="btn btn-success" asp-area="" asp-controller="CVs" asp-action="Index">Add your CV</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Vacancies</h5>
                    <p class="card-text">Let`s see some new vacancies</p>
                    <a class="btn btn-success" asp-area="" asp-controller="Vacancies" asp-action="Index">Show vacancies</a>
                </div>
            </div>
        </div>
    </div>
    <p></p>
    <div id="carouseleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/First slide.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/Second slide.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/Third slide.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouseleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouseleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <p></p>
</div>
